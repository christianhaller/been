{
  "name": "download-your-travelmap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "badges": "ts-node --transpile-only coverage",
    "build:css": "postcss src/frontend/styles/styles.css > public/styles.min.css",
    "build:html": "html-minifier --collapse-whitespace --input-dir src/frontend/templates --output-dir public",
    "build:js": "rollup -c ./rollup.config.js",
    "build": "NODE_ENV=production node ./build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:e2e": "jest -c e2e/jest.config.js",
    "test:frontend": "jest",
    "test:backend": "deno test --reload --unstable --coverage --allow-read --allow-net --log-level info --allow-env src/backend",
    "fmt": "deno fmt src/backend api && prettier 'src/frontend/**/*' '!**/*.snap' --write",
    "deps:frontend": "ncu",
    "deps:backend": "npm run dmm -- check",
    "deps": "npm run deps:backend && npm run deps:frontend",
    "dmm": "deno run --allow-write --allow-net --allow-read https://deno.land/x/dmm@v1.1.5/mod.ts",
    "upgrade:backend": "npm run dmm -- update",
    "upgrade:frontend": "ncu -u",
    "upgrade": "npm run upgrade:backend && npm run upgrade:frontend"
  },
  "dependencies": {
    "bytes": "^3.1.0",
    "country-emoji": "^1.5.4",
    "geojson": "^0.5.0",
    "json2csv": "^5.0.5",
    "jszip": "^3.5.0",
    "load-js": "^3.0.3",
    "tokml": "^0.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-html": "^0.2.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/google.visualization": "0.0.57",
    "@types/json2csv": "^5.0.1",
    "@types/jszip": "^3.4.1",
    "autoprefixer": "^10.0.4",
    "cssnano": "^4.1.10",
    "html-minifier": "^4.0.0",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "npm-check-updates": "^10.2.2",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "rollup": "^2.34.0",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^2.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-ch:christianhaller/download-your-travelmap.git"
  },
  "keywords": [],
  "author": "Christian Haller",
  "license": "ISC"
}
