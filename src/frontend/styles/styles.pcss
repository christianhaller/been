@tailwind base;

@tailwind components;

@tailwind utilities;

a {
  text-decoration: underline;
}

#download {
  text-decoration: none;
}

table {
  width: 100%;
}

table tr:hover td {
  background: #333;
  color: #fff;
}

.bg {
  background: #59c173; /* fallback for old browsers */
  background: linear-gradient(
    to right,
    #59c173,
    #a17fe0,
    #5d26c1
  ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}
